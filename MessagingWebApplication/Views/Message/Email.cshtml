@model MessagingWebApplication.Models.EmailMessage

@{ ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>New Email</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Reciever)
        @Html.TextBoxFor(m => m.Reciever)
        @Html.ValidationMessageFor(m => m.Reciever)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Sender)
        @Html.TextBoxFor(m => m.Sender)
        @Html.ValidationMessageFor(m => m.Sender)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Subject)
        @Html.TextBoxFor(m => m.Subject)
        @Html.ValidationMessageFor(m => m.Subject)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Body)
        @Html.TextBoxFor(m => m.Body)
        @Html.ValidationMessageFor(m => m.Body)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>


}