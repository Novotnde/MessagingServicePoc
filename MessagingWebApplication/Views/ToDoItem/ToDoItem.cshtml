@model MessagingWebApplication.ViewModel.ToDoItemsViewModel

@{ ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>New To do Task</h2>

@using (Html.BeginForm("MessageStatus", "ToDoItem"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(t => t.ToDoItems.Title)
        @Html.TextBoxFor(t => t.ToDoItems.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.ToDoItems.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.ToDoItems.Body)
        @Html.TextBoxFor(t => t.ToDoItems.Body, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.ToDoItems.Body)
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.ToDoItems.DateHappening)
        @Html.TextBoxFor(t => t.ToDoItems.DateHappening, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.ToDoItems.DateHappening)
    </div>
    @Html.HiddenFor(t => t.ToDoItems.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>


}